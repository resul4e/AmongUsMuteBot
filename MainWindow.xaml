<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<StackPanel>
			<StackPanel Orientation="Horizontal">
				<TextBlock Margin="4,4,10,4" Width="Auto">Token:</TextBlock>
				<TextBox Margin="0,4,0,4" x:Name="TokenBox" Height="24" Width="500" VerticalContentAlignment="Center"></TextBox>
				<Button x:Name="ApplyTokenButton" Padding="10,4,10,4" Margin="10,4,4,4" Click="OnApplyTokenButtonClicked">Apply</Button>
			</StackPanel>

		</StackPanel>
    </Grid>
</Window>
