<Window x:Class="AmongUsBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AmongUsBot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<StackPanel>
			<ComboBox x:Name="TargetSelectionBox" ItemsSource="{Binding ProcessIDs}" SelectionChanged="OnTargetSelectionChanged" Width="Auto" Margin="4,4,4,4">
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<StackPanel Orientation="Horizontal">
							<Image></Image>
							<TextBlock Text="{Binding StringFormat='Among Us.exe({0})'}"></TextBlock>
						</StackPanel>
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>
			<StackPanel Orientation="Horizontal">
					<TextBlock Margin="4,4,10,4" Width="Auto" >Token:</TextBlock>
				<PasswordBox Margin="0,4,0,4" x:Name="TokenBox" Height="24" Width="500" VerticalContentAlignment="Center"/>
				<Button x:Name="ApplyTokenButton" Padding="10,4,10,4" Margin="10,4,4,4" Click="OnApplyTokenButtonClicked">Apply</Button>
			</StackPanel>
			<TextBlock Text="{Binding Player1Pos.X}"/>
			<TextBlock Text="{Binding Player1IsDead}"/>
		</StackPanel>
    </Grid>
</Window>
